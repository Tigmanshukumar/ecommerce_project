<%- include('./partials/header') %>


<div class="min-h-screen bg-gradient-to-br from-tech-dark to-tech-gray flex items-center justify-center py-12 px-4">
    <div class="max-w-md w-full">
       
        <% if(error && error.length > 0){ %>
            <div class="mb-6 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg">
                <div class="flex items-center">
                    <i class="ri-error-warning-line mr-2"></i>
                    <%= error %>
                </div>
            </div>
        <% } %>
        
        
        <div class="bg-white rounded-xl shadow-2xl p-8">
            <div class="text-center mb-8">
                <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ri-admin-line text-2xl text-blue-600"></i>
                </div>
                <h2 class="text-3xl font-bold text-tech-dark mb-2">Admin Portal</h2>
                <p class="text-gray-600">TechHub Management System</p>
            </div>
            
            <form action="/owners/login" method="post" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="ri-mail-line mr-1"></i>Admin Email
                    </label>
                    <input name="email" type="email" required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="Enter admin email">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="ri-lock-line mr-1"></i>Password
                    </label>
                    <input name="password" type="password" required
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="Enter password">
                </div>
                
                <button type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center">
                    <i class="ri-login-box-line mr-2"></i>Access Admin Panel
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <a href="/" class="text-blue-600 hover:text-blue-800 text-sm transition-colors">
                    <i class="ri-arrow-left-line mr-1"></i>Back to Store
                </a>
            </div>
        </div>
        
        
        <div class="mt-6 text-center">
            <div class="bg-yellow-100 text-yellow-800 px-4 py-2 rounded-lg text-sm">
                <i class="ri-shield-line mr-1"></i>
                Authorized personnel only
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-hide flash messages
    setTimeout(function() {
        const flashMessages = document.querySelectorAll('.bg-red-500');
        flashMessages.forEach(function(msg) {
            msg.style.display = 'none';
        });
    }, 4000);
</script>

<%- include('./partials/footer') %>