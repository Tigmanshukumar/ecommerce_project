<%- include('./partials/header') %>

<div class="max-w-7xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Shopping Cart</h1>
    
    
    <div class="bg-gray-100 p-4 rounded mb-4">
        <p>User: <%= user.fullname %> (<%= user.email %>)</p>
        <p>Cart Items: <%= user.cart ? user.cart.length : 0 %></p>
        <p>Bill: ₹<%= bill || 0 %></p>
    </div>
    
    <% if(user.cart && user.cart.length > 0) { %>
        <div class="space-y-4">
            <% user.cart.forEach(function(product) { %>
                <% if(product) { %>
                    <div class="bg-white p-4 rounded-lg shadow border">
                        <div class="flex items-center space-x-4">
                            <div class="w-16 h-16 bg-gray-200 rounded flex items-center justify-center">
                                <% if(product.image) { %>
                                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                         alt="<%= product.name %>" class="max-w-full max-h-full object-contain">
                                <% } else { %>
                                    <span>No Image</span>
                                <% } %>
                            </div>
                            <div class="flex-1">
                                <h3 class="font-semibold"><%= product.name || 'Unknown Product' %></h3>
                                <p class="text-green-600 font-bold">₹<%= product.price || 0 %></p>
                            </div>
                            <form action="/removefromcart/<%= product._id %>" method="POST">
                                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded">Remove</button>
                            </form>
                        </div>
                    </div>
                <% } else { %>
                    <div class="bg-red-100 p-4 rounded">
                        <p class="text-red-600">Invalid product in cart</p>
                    </div>
                <% } %>
            <% }) %>
        </div>
        
        <div class="mt-8 bg-white p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold mb-4">Order Summary</h2>
            <div class="space-y-2">
                <div class="flex justify-between">
                    <span>Subtotal:</span>
                    <span>₹<%= (bill || 20) - 20 %></span>
                </div>
                <div class="flex justify-between">
                    <span>Shipping:</span>
                    <span>₹20</span>
                </div>
                <div class="flex justify-between font-bold text-lg border-t pt-2">
                    <span>Total:</span>
                    <span>₹<%= bill || 20 %></span>
                </div>
            </div>
            <button class="w-full bg-green-600 text-white py-3 rounded mt-4">Proceed to Checkout</button>
        </div>
    <% } else { %>
        <div class="text-center py-16">
            <h2 class="text-2xl mb-4">Your cart is empty</h2>
            <a href="/shop" class="bg-blue-600 text-white px-6 py-3 rounded">Continue Shopping</a>
        </div>
    <% } %>
</div>

<%- include('./partials/footer') %>